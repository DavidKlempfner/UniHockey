@model Entities.Models.Tournament

<script src="~/Scripts/App/Tournament.js"></script>

@using (Html.BeginForm("Index", "Game"))
{
    string defaultValue = "Please select:";
    @Html.LabelFor(m => m.Team1Id)
    @Html.DropDownListFor(m => m.Team1Id, Model.Teams, defaultValue)
    @Html.LabelFor(m => m.Team2Id)
    @Html.DropDownListFor(m => m.Team2Id, Model.Teams, defaultValue)
    <input id="Submit" type="submit" value="Create game" disabled="disabled" />
}